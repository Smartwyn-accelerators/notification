<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd
                                      http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="fastCode, Inc" id="0000-000039">
        <createTable tableName="notification">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="notification_pkey"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
            <column name="recipient" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="timestamp" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="type" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="fastCode, Inc" id="0000-000040">
        <addColumn tableName="notification">
            <column name="data" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
